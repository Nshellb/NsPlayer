<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/popup_background"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:id="@+id/settingsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings_title"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1" />

    <TextView
        android:id="@+id/settingsModeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/settings_mode_title"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

    <LinearLayout
        android:id="@+id/settingsModeRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/settingsModeFolders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="16dp"
            android:text="@string/mode_folders"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2" />

        <TextView
            android:id="@+id/settingsModeHierarchy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="16dp"
            android:text="@string/mode_hierarchy"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2" />

        <TextView
            android:id="@+id/settingsModeVideos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mode_videos"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2" />
    </LinearLayout>

    <TextView
        android:id="@+id/displayTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/display_title"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

    <LinearLayout
        android:id="@+id/settingsDisplayRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/settingsDisplayList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="16dp"
            android:text="@string/mode_list"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2" />

        <TextView
            android:id="@+id/settingsDisplayTile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mode_tile"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/settingsDisplayTileMultipliers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/settingsDisplayTileX2Row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:paddingHorizontal="6dp"
            android:paddingVertical="2dp"
            android:paddingEnd="10dp">

            <ImageView
                android:id="@+id/settingsDisplayTileX2Icon"
                android:layout_width="@dimen/multiplier_x_size"
                android:layout_height="@dimen/multiplier_x_size"
                android:contentDescription="@null"
                android:src="@drawable/ic_multiplier_x"
                android:tint="?attr/colorOnSurface" />

            <TextView
                android:id="@+id/settingsDisplayTileX2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="2"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                android:textSize="@dimen/multiplier_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/settingsDisplayTileX3Row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:paddingHorizontal="6dp"
            android:paddingVertical="2dp"
            android:paddingEnd="10dp">

            <ImageView
                android:id="@+id/settingsDisplayTileX3Icon"
                android:layout_width="@dimen/multiplier_x_size"
                android:layout_height="@dimen/multiplier_x_size"
                android:contentDescription="@null"
                android:src="@drawable/ic_multiplier_x"
                android:tint="?attr/colorOnSurface" />

            <TextView
                android:id="@+id/settingsDisplayTileX3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="3"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                android:textSize="@dimen/multiplier_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/settingsDisplayTileX4Row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:paddingHorizontal="6dp"
            android:paddingVertical="2dp">

            <ImageView
                android:id="@+id/settingsDisplayTileX4Icon"
                android:layout_width="@dimen/multiplier_x_size"
                android:layout_height="@dimen/multiplier_x_size"
                android:contentDescription="@null"
                android:src="@drawable/ic_multiplier_x"
                android:tint="?attr/colorOnSurface" />

            <TextView
                android:id="@+id/settingsDisplayTileX4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="4"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                android:textSize="@dimen/multiplier_text_size" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/sortTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/sort_title"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

    <LinearLayout
        android:id="@+id/settingsSortRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/settingsSortTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="16dp"
            android:text="@string/sort_title_item"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2" />

        <TextView
            android:id="@+id/settingsSortModified"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="16dp"
            android:text="@string/sort_modified"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2" />

        <TextView
            android:id="@+id/settingsSortDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="16dp"
            android:text="@string/sort_duration"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/settingsSortOrderRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/settingsSortAsc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="6dp"
            android:paddingEnd="16dp"
            android:text="@string/sort_asc"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2" />

        <TextView
            android:id="@+id/settingsSortDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="6dp"
            android:text="@string/sort_desc"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/settingsActionRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="end"
        android:orientation="horizontal">

        <Button
            android:id="@+id/settingsCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel" />

        <Button
            android:id="@+id/settingsConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/confirm" />
    </LinearLayout>
</LinearLayout>
