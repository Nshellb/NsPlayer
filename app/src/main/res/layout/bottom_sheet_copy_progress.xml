<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:paddingTop="20dp"
    android:paddingBottom="24dp">

    <TextView
        android:id="@+id/copyProgressTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/copy_progress_title"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/copyProgressCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/copy_progress_count_placeholder"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray" />

    <TextView
        android:id="@+id/copyProgressSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="@string/copy_progress_size_placeholder"
        android:textSize="13sp"
        android:textColor="@android:color/darker_gray" />

    <TextView
        android:id="@+id/copyProgressPercent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="@string/copy_progress_percent_placeholder"
        android:textSize="13sp"
        android:textColor="@android:color/darker_gray" />

    <TextView
        android:id="@+id/copyProgressFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="@string/copy_progress_file_placeholder"
        android:textSize="13sp"
        android:textColor="@android:color/darker_gray"
        android:maxLines="1"
        android:ellipsize="end" />

    <ProgressBar
        android:id="@+id/copyProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:indeterminate="false"
        android:max="100"
        android:progress="0"
        android:progressTint="@color/brand_green"
        android:indeterminateTint="@color/brand_green" />

    <Button
        android:id="@+id/copyProgressCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/copy_cancel"
        android:textAllCaps="false" />
</LinearLayout>
